# Required Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token

# Required Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token

# Optional admin Telegram user ID for admin commands
ADMIN_ID=your_telegram_user_id

# Discord application's client ID (found in Discord Developer Portal)
DISCORD_CLIENT_ID=your_discord_client_id

# Discord server (guild) ID for deploying commands
DISCORD_GUILD_ID=your_discord_guild_id

# Redis connection URL (will be set to redis://redis:6379/0 in docker-compose.yml)
REDIS_URL=redis://127.0.0.1:6379/0 